{
  "name": "@milaboratory/mixcr",
  "version": "0.0.1",
  "description": "MiXCR software dependency for Platforma Backend",
  "scripts": {
    "build": "true",
    "postinstall": "./install-ci.sh",

    "build:package": "pl-pkg build packages",
    "sign:package": "pl-pkg sign packages --sign-util='gcloud-kms-sign'",
    "publish:package": "pl-pkg publish packages",
    "release:package": "npm run build:package && npm run sign:package && npm run publish:package",

    "build:descriptor": "pl-pkg build descriptors",
    "publish:descriptor": "pl-pkg publish descriptors",
    "release:descriptor": "npm run build:descriptor && npm run publish:descriptor",

    "release": "npm run release:package && npm run release:descriptor"
  },
  "block-software": {
    "packages": {
      "mixcr": {
        "binary": {
          "registry": { "name": "milaboratories" },
          "name": "milaboratories/mixcr",
          "crossplatform": true,
          "type": "java",
          "environment": "@milaboratory/runenv-java-corretto:21.0.2.13.1",
          "root": "./dld/mixcr/",
          "entrypoints": {
            "main": {
              "cmd": [ "java", "-jar", "{pkg}/mixcr.jar" ]
            }
          }
        }
      }
    }
  },
  "files": [
    "dist/"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@milaboratory/pl-package-builder": "^2.6.0",
    "@milaboratory/runenv-java-corretto": "^0.1.1"
  }
}
